# ===========================================
# Treningsassistent Backend Environment Variables
# ===========================================
# Copy this file to .env and update with your values
# IMPORTANT: Never commit .env to version control
#
# For detailed documentation, see ENV.md in the project root

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
# Development: Use 'postgres' user with local PostgreSQL instance
# Production: Use dedicated database user with strong password
DATABASE_URL=postgresql://postgres:securepassword123@localhost:5432/treningsassistent

# ===========================================
# JWT Authentication
# ===========================================
# Secret key for signing JWT tokens
# CRITICAL: Generate a strong random key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# JWT algorithm (HS256 is recommended)
ALGORITHM=HS256

# Token expiration in minutes (1440 = 24 hours)
# Production: Consider shorter expiration (60-120 minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# Application Settings
# ===========================================
# Application name (displayed in logs and API docs)
APP_NAME=Treningsassistent

# Debug mode - MUST be False in production!
# Enables detailed error messages and auto-reload
DEBUG=True
